{
    "name": "niroee/easy-orm",
    "description": "A simple and lightweight php ORM",
    "type": "library",
    "license": "MIT",
    "version": "0.5.0",
    "autoload": {
        "psr-4": {
            "Niroee\\EasyOrm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Niroee\\EasyOrmTests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Milad Niroee",
            "email": "mniroee@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "10.0.x-dev"
    },
    "scripts": {
        "test": [
            "php ./vendor/bin/phpunit tests --bootstrap=tests/bootstrap.php --color=always"
        ]
    }
}
